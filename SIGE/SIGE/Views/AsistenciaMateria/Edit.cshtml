@model SIGE.Models.AsistenciaMateria

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AsistenciaMateria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodAsistenciaMateria" />
            <div class="form-group">
                <label asp-for="MatPorDiaHorario" class="control-label"></label>
                <select asp-for="MatPorDiaHorario" class="form-control" asp-items="ViewBag.MatPorDiaHorario"></select>
                <span asp-validation-for="MatPorDiaHorario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AsistenciaEstudiante" class="control-label"></label>
                <select asp-for="AsistenciaEstudiante" class="form-control" asp-items="ViewBag.AsistenciaEstudiante"></select>
                <span asp-validation-for="AsistenciaEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Asistio" /> @Html.DisplayNameFor(model => model.Asistio)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
