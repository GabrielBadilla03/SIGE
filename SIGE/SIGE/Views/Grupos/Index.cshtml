@model IEnumerable<SIGE.Models.Grupo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Seccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapacidadMaxima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AñoLectivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AulaFK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfesorFK)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Seccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapacidadMaxima)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AñoLectivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AulaFK.NomAula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfesorFK.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodGrupo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodGrupo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodGrupo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
