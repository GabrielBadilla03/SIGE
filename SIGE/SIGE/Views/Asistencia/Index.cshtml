@model IEnumerable<SIGE.Models.Asistencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GrupoFk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAsistencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaSemanaFK)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GrupoFk.Grado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAsistencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaSemanaFK.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodAsistencia">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodAsistencia">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodAsistencia">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
